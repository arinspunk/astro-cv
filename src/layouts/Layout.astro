---
/**
 * Main Layout Component
 * Base layout for all pages, includes global styles and metadata
 */
import FontLoader from '../components/FontLoader.astro';

interface Props {
  title: string;
  description?: string;
  lang?: 'es' | 'en' | 'pt';
}

const { 
  title,
  description = "Portfolio y CV de Xúlio Zé, desarrollador fullstack",
  lang = 'es'
} = Astro.props;
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    
    <!-- Optimized font loading strategy -->
    <FontLoader />
  </head>
  <body>
    <slot />
  </body>
</html>
